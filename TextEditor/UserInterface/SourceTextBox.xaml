<TextBox x:Class="TextEditor.SourceTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextEditor"
             xmlns:a="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" 
         Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" 
         HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" 
         BorderThickness="0" SelectionBrush="#FFE8E8E8" CaretBrush="#FFE6E6E6" 
         ScrollViewer.ScrollChanged="TextBox_ScrollChanged" FontFamily="Consolas" IsUndoEnabled="False" ScrollViewer.CanContentScroll="True"/>
